---
import keralaJsLogo from "../../src/assets/keralajs-logo.svg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>KeralaJS</title>
    <meta
      name="description"
      content="JavaScript community from the God's own country"
    />
    <meta
      name="keywords"
      content="JavaScript, Meetups, JavaScript events in Kerala, HTML5 events in Kerala."
    />

    <link
      href="http://fonts.googleapis.com/css?family=Open+Sans:400,600,300"
      rel="stylesheet"
      type="text/css"
    />
  </head>

  <body>
    <div class="header">
      <div class="container-narrow">
        <div class="masthead text-center">
          <a href="/">
            <img
              src={keralaJsLogo.src}
              alt=""
              width="100"
              style="border: 5px solid #f2f7e9; border-radius:5px"
            />
          </a>
          <div class="jumbotron">
            <h2>KeralaJS</h2>
          </div>
          <ul class="nav nav-pills">
            <li>
              <a href="https://t.me/keralajs">Telegram</a>
            </li>
            <li>
              <a href="https://github.com/keralajs">Github</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <div class="container-narrow content-container">
      <div class="row-fluid">
        <div class="span10 offset1 text-center">
          <slot />
        </div>
      </div>
    </div>

    <footer id="site-footer">
      <hr />
      <div>
        &copy; <a href="https://keralajs.org">KeralaJS</a>
        {new Date().getFullYear()}.
      </div>
    </footer>
  </body>
</html>

<style>
  body {
    padding-top: 0px;
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;

    margin: 0;
    font-size: 14px;
    line-height: 20px;
    color: #333;
    background-color: #fff;
    height: 100vh;
  }
  a {
    color: rgb(10, 149, 168);
  }
  .header {
    min-height: 15vh;
    padding: 20px 0;
    color: #f2f7e9;
    background-image: linear-gradient(
      bottom,
      rgb(24, 70, 82) 11%,
      rgb(16, 46, 55) 81%
    );
    background-image: -o-linear-gradient(
      bottom,
      rgb(24, 70, 82) 11%,
      rgb(16, 46, 55) 81%
    );
    background-image: -moz-linear-gradient(
      bottom,
      rgb(24, 70, 82) 11%,
      rgb(16, 46, 55) 81%
    );
    background-image: -webkit-linear-gradient(
      bottom,
      rgb(24, 70, 82) 11%,
      rgb(16, 46, 55) 81%
    );
    background-image: -ms-linear-gradient(
      bottom,
      rgb(24, 70, 82) 11%,
      rgb(16, 46, 55) 81%
    );

    background-image: -webkit-gradient(
      linear,
      left bottom,
      left top,
      color-stop(0.11, rgb(24, 70, 82)),
      color-stop(0.81, rgb(16, 46, 55))
    );
  }
  /* Custom container */
  .container-narrow {
    margin: 0 auto;
    font-family: "open sans", helvetica, arial, sans-serif;
  }
  .container-narrow > hr {
    margin: 30px 0;
  }

  .content-container {
    min-height: 60vh;
  }

  /* Main marketing message and sign up button */
  .jumbotron {
    /* margin: 20px 0 60px; */
    text-align: center;
  }
  .jumbotron h1 {
    font-size: 58px;
    font-weight: 500;
    line-height: 1;
  }
  .jumbotron .btn {
    font-size: 21px;
    padding: 14px 24px;
  }

  /* Supporting marketing content */
  .marketing {
    margin: 60px 0;
  }
  .marketing p + h4 {
    margin-top: 28px;
  }
  .masthead h1 {
    font-size: 68px;
    font-weight: 600;
    height: 1px;
    margin-top: 0;
    padding-top: 0px;
    color: #f2f7e9;
    text-indent: -9999px;
  }
  .nav-pills {
    display: block;
    text-align: center;
  }
  .nav-tabs > li,
  .nav-pills > li {
    float: none;
    display: inline-block;
  }

  .nav {
    padding: 0;
    list-style: none;
  }

  .nav-pills > li > a {
    display: block;
    text-decoration: none;

    padding-top: 8px;
    padding-bottom: 8px;
    margin-top: 2px;
    margin-bottom: 2px;
    border-radius: 5px;

    padding-right: 12px;
    padding-left: 12px;
    margin-right: 2px;
    line-height: 14px;
  }

  .nav-pills a {
    text-transform: uppercase;
    font-weight: 300;
    font-size: 95%;
    letter-spacing: 1px;
    color: #eee;
  }
  .nav-pills > .active > a,
  .nav-pills > .active > a:hover,
  .nav-pills > .active > a:focus {
    color: #eee;
    background-color: #7a7a7a;
    text-transform: uppercase;
    font-weight: 300;
    font-size: 95%;
    letter-spacing: 1px;
  }
  .nav-pills > li > a:hover {
    background-color: #7a7a7a;
  }
  .nav .dropdown-toggle .caret,
  .nav .dropdown-toggle:hover .caret {
    border-top-color: #eee;
    border-bottom-color: #eee;
  }
  .dropdown-menu > li {
    text-align: left;
    text-transform: inherit;
  }
  .dropdown-menu > li > a:hover,
  .dropdown-menu > li > a:focus {
    background: #7a7a7a;
  }
  .post header h1 {
    font-size: 40px;
    font-weight: 300;
    margin-bottom: 15px;
  }
  .post header h1 a {
    -webkit-transition: color 0.25s ease-in;
    -moz-transition: color 0.25s ease-in;
    transition: color 0.25s ease-in;
    color: rgb(24, 70, 82);
  }
  .post header h1 a:hover {
    color: rgb(0, 121, 153);
  }
  .post:last-child {
    padding-bottom: 10px;
    border-bottom: none;
  }
  .post {
    padding-top: 25px;
    border-bottom: 1px solid #e5e5e5;
    padding-bottom: 30px;
  }
  .postmeta {
    margin: 10px 0;
    font-size: 14px;
    font-weight: 200;
  }
  .postmeta .author-by {
    color: #9ca79d;
  }
  .content {
    font-size: 19px;
    line-height: 26px;
    font-weight: 300;
  }
  .content ul li {
    line-height: 30px;
  }
  .more > .tags > .tag {
    float: right;
    padding: 1px 7px;
    background: rgb(24, 70, 82);
    margin: 0 2px;
    text-transform: lowercase;
  }
  .more {
    margin: 10px 0;
  }
  .more > a {
    font-size: 20px;
    font-weight: 200;
    letter-spacing: 1px;
    color: rgb(0, 121, 153);
  }
  #site-footer {
    /* position: ab; */
    position: absolute;
    bottom: 0;
    text-align: center;
    font-size: 13px;
    font-weight: 300;
    padding-bottom: 10px;
    width: 100%;
  }
  #site-footer a {
    -webkit-transition: color 0.25s ease-in;
    -moz-transition: color 0.25s ease-in;
    transition: color 0.25s ease-in;
    color: rgb(24, 70, 82);
  }
  #site-footer a:hover {
    color: rgb(0, 121, 153);
  }
  .news-head {
    font-size: 28px;
    font-weight: 300;
    color: rgb(0, 121, 153);
    margin-top: 30px;
    letter-spacing: 1px;
  }
  .archives ul li {
    line-height: 30px;
    font-size: 16px;
    list-style: square;
  }
  .archives-date {
    margin-right: 10px;
  }
  .tags {
    color: rgb(0, 121, 153);
  }
  .tags .tag {
    background-color: #ededed;
    padding: 2px 8px;
    font-size: 14px;
    font-weight: normal;
    margin-right: 10px;
  }
  .peoples-wrap {
    width: 100%;
    float: left;
  }
  .peoples {
    padding: 10px 0 0 10px;
    font-weight: bold;
    color: rgb(10, 149, 168);
    width: 45%;
    float: left;
    height: 60px;
  }
  .clear {
    clear: both;
  }
  .sponsor-head {
    text-align: center;
  }
  ul.sponsors {
    list-style: none;
    margin: 0 auto;
  }
  ul.sponsors li.item {
    background: #fefefe;
    border: 1px solid #ddd;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
    padding: 10px 10px;
    width: 162px;
    box-sizing: border-box;
    margin: 20px auto;
  }
  ul.sponsors li.item a {
    text-decoration: none;
  }
  ul.sponsors li.item a .name {
    font-weight: bold;
    text-align: center;
    font-size: 18px;
    margin-top: 5px;
  }
  .text-center {
    text-align: center;
  }
</style>
